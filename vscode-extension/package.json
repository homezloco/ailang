{
  "name": "ailang",
  "displayName": "AILang Language Support",
  "description": "AILang language support with syntax highlighting, validation, and IntelliSense",
  "version": "0.1.0",
  "publisher": "ailang",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:ailang",
    "onCommand:ailang.validateFile",
    "onCommand:ailang.formatFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ailang",
        "aliases": ["AILang", "ailang"],
        "extensions": [".ail"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ailang",
        "scopeName": "source.ailang",
        "path": "./syntaxes/ailang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ailang",
        "path": "./snippets/ailang.json"
      }
    ],
    "commands": [
      {
        "command": "ailang.validateFile",
        "title": "AILang: Validate File"
      },
      {
        "command": "ailang.formatFile",
        "title": "AILang: Format File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "AILang Configuration",
      "properties": {
        "ailang.validation.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable AILang validation"
        },
        "ailang.format.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable AILang formatting"
        },
        "ailang.lint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable AILang linting"
        },
        "ailang.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the AILang language server."
        },
        "ailang.path": {
          "type": ["string", "null"],
          "default": null,
          "description": "Path to the AILang executable"
        },
        "ailang.configPath": {
          "type": ["string", "null"],
          "default": null,
          "description": "Path to the AILang configuration file"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "ailang.validateFile",
          "when": "resourceLangId == ailang",
          "group": "ailang"
        },
        {
          "command": "ailang.formatFile",
          "when": "resourceLangId == ailang",
          "group": "ailang"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ailang"
  },
  "license": "MIT"
}
