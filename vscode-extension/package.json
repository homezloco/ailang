{
  "name": "ailang",
  "displayName": "AILang Language Support",
  "description": "AILang language support with syntax highlighting, validation, and IntelliSense",
  "version": "0.1.0",
  "publisher": "ailang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/src/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "ailang.welcome",
        "contents": "Welcome to AILang! [Get Started](command:ailang.showWelcome)."
      }
    ],
    "languages": [
      {
        "id": "ailang",
        "aliases": [
          "AILang",
          "ailang"
        ],
        "extensions": [
          ".ail"
        ],
        "configuration": "./language-configuration.json",
        "firstLine": "^\\s*model\\s"
      }
    ],
    "grammars": [
      {
        "language": "ailang",
        "scopeName": "source.ailang",
        "path": "./syntaxes/ailang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ailang",
        "path": "./snippets/ailang.json"
      }
    ],
    "commands": [
      {
        "command": "ailang.validateFile",
        "title": "AILang: Validate File"
      },
      {
        "command": "ailang.formatFile",
        "title": "AILang: Format File"
      },
      {
        "command": "ailang.addModelTemplate",
        "title": "AILang: Add Model Template"
      },
      {
        "command": "ailang.addLayer",
        "title": "AILang: Add Layer"
      },
      {
        "command": "ailang.addCompileStatement",
        "title": "AILang: Add Compile Statement"
      },
      {
        "command": "ailang.convertToSequentialModel",
        "title": "AILang: Convert to Sequential Model"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "AILang Configuration",
      "properties": {
        "ailang.validation": {
          "type": "object",
          "title": "Validation",
          "description": "AILang validation settings",
          "properties": {
            "enable": {
              "type": "boolean",
              "default": true,
              "description": "Enable/disable AILang validation"
            },
            "strict": {
              "type": "boolean",
              "default": false,
              "description": "Enable strict validation mode"
            },
            "checkNamingConventions": {
              "type": "boolean",
              "default": true,
              "description": "Check for naming convention violations"
            },
            "checkDeprecated": {
              "type": "boolean",
              "default": true,
              "description": "Check for usage of deprecated features"
            },
            "maxNumberOfProblems": {
              "type": "number",
              "default": 100,
              "description": "Maximum number of problems to report"
            },
            "maxWarningLevel": {
              "type": "string",
              "enum": ["none", "info", "warning", "error"],
              "default": "warning",
              "description": "Maximum level of warnings to report"
            },
            "ignorePatterns": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "default": [],
              "description": "Patterns to ignore during validation"
            }
          }
        },
        "ailang.format": {
          "type": "object",
          "title": "Formatting",
          "description": "AILang formatting settings",
          "properties": {
            "enable": {
              "type": "boolean",
              "default": true,
              "description": "Enable/disable AILang formatting"
            },
            "indentSize": {
              "type": "number",
              "default": 2,
              "description": "Number of spaces for indentation"
            },
            "insertFinalNewline": {
              "type": "boolean",
              "default": true,
              "description": "Insert a final newline at the end of the file"
            },
            "trimTrailingWhitespace": {
              "type": "boolean",
              "default": true,
              "description": "Trim trailing whitespace"
            }
          }
        },
        "ailang.lint": {
          "type": "object",
          "title": "Linting",
          "description": "AILang linting settings",
          "properties": {
            "enable": {
              "type": "boolean",
              "default": true,
              "description": "Enable/disable AILang linting"
            },
            "rules": {
              "type": "object",
              "description": "Specific linting rules configuration",
              "properties": {
                "noUnusedLayers": {
                  "type": "boolean",
                  "default": true,
                  "description": "Flag unused layers in the model"
                },
                "requireCompile": {
                  "type": "boolean",
                  "default": true,
                  "description": "Require compile statement in model"
                },
                "requireFit": {
                  "type": "boolean",
                  "default": false,
                  "description": "Require fit statement in model"
                }
              }
            }
          }
        },
        "ailang.hover": {
          "type": "object",
          "title": "Hover",
          "description": "AILang hover settings",
          "properties": {
            "enable": {
              "type": "boolean",
              "default": true,
              "description": "Enable/disable hover documentation"
            },
            "showExamples": {
              "type": "boolean",
              "default": true,
              "description": "Show code examples in hover documentation"
            },
            "showLinks": {
              "type": "boolean",
              "default": true,
              "description": "Show documentation links in hover"
            }
          }
        },
        "ailang.completion": {
          "type": "object",
          "title": "Completion",
          "description": "AILang completion settings",
          "properties": {
            "enable": {
              "type": "boolean",
              "default": true,
              "description": "Enable/disable code completion"
            },
            "showDocumentation": {
              "type": "boolean",
              "default": true,
              "description": "Show documentation in completion items"
            }
          }
        },
        "ailang.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the AILang language server."
        },
        "ailang.path": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to the AILang executable"
        },
        "ailang.configPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Path to the AILang configuration file"
        },
        "ailang.experimental": {
          "type": "object",
          "title": "Experimental Features",
          "description": "Experimental AILang features",
          "properties": {
            "enableAdvancedValidation": {
              "type": "boolean",
              "default": false,
              "description": "Enable advanced validation features"
            },
            "enableTypeChecking": {
              "type": "boolean",
              "default": false,
              "description": "Enable experimental type checking"
            }
          }
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "ailang.validateFile",
          "when": "resourceLangId == ailang",
          "group": "ailang"
        },
        {
          "command": "ailang.formatFile",
          "when": "resourceLangId == ailang",
          "group": "ailang"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test:simple": "npm run compile && mocha out/test/simple-tests.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/assert": "^1.5.11",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.26.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.8.4",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^9.0.1"
  },
  "dependencies": {
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ailang"
  },
  "license": "MIT"
}
