{
    "comments": {
        "lineComment": "#",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""]
    ],
    "autoClosingPairs": [
        {"open": "{", "close": "}"},
        {"open": "[", "close": "]"},
        {"open": "(", "close": ")"},
        {"open": "'", "close": "'"},
        {"open": "\"", "close": "\""},
        {"open": "/*", "close": " */", "notIn": ["string"]}
    ],
    "autoCloseBefore": ";:.,=}])> \t\n",
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["'", "'"],
        ["\"", "\""],
        ["`", "`"],
        ["<", ">"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(model|layer|input|output|train|test|dataset|pipeline|agent|tool)\\b.*\\{\\s*$",
        "decreaseIndentPattern": "^\\s*\\}\\s*$",
        "indentNextLinePattern": "^\\s*(input|output|hidden|train|test|dataset|pipeline|agent|tool)\\b.*:\\s*$"
    },
    "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*",
    "folding": {
        "markers": {
            "start": "^\\s*#region\\b",
            "end": "^\\s*#endregion\\b"
        }
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*#.*",
            "action": {
                "indent": "none",
                "appendText": "# "
            }
        },
        {
            "beforeText": "^\\s*\\{\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*\\}\\s*$",
            "action": {
                "indent": "outdent"
            }
        }
    ]
}
