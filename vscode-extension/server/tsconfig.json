{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "out",
        "lib": ["es2020", "dom"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "../node_modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".vscode-test"]
}
