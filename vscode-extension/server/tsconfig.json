{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "outDir": "../out/server",
        "lib": ["es2020"],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": ["node"],
        "composite": true,
        "declaration": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".vscode-test"]
}
