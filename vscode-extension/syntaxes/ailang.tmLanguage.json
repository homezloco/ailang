{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "AILang",
    "scopeName": "source.ailang",
    "fileTypes": ["ail"],
    "patterns": [
        {"include": "#comments"},
        {"include": "#functions"},
        {"include": "#parameters"},
        {"include": "#keywords"},
        {"include": "#strings"},
        {"include": "#numbers"},
        {"include": "#operators"},
        {"include": "#brackets"},
        {"include": "#constants"},
        {"include": "#types"},
        {"include": "#layers"},
        {"include": "#activations"},
        {"include": "#optimizers"},
        {"include": "#losses"}
    ],
    "repository": {
        "comments": {
            "name": "comment.line.number-sign.ailang",
            "match": "#.*$"
        },
        "functions": {
            "name": "entity.name.function.ailang",
            "match": "\\b(Sequential|Model|Input|add|compile|fit|evaluate|predict|save|load|summary)\\b"
        },
        "parameters": {
            "name": "variable.parameter.ailang",
            "match": "\\b(shape|units|filters|kernel_size|strides|padding|activation|use_bias|trainable|name|dtype)\\b"
        },
        "keywords": {
            "name": "keyword.control.ailang",
            "match": "\\b(model|layers|train|type|optimizer|loss|metrics|epochs|batch_size|validation_split|callbacks|input_shape|output_shape)\\b"
        },
        "strings": {
            "name": "string.quoted.double.ailang",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.ailang",
                    "match": "\\\\[\\\"\\\\]"
                }
            ]
        },
        "numbers": {
            "name": "constant.numeric.ailang",
            "match": "\\b[0-9]+(?:\\.[0-9]+)?(?:[eE][+-]?[0-9]+)?\\b"
        },
        "operators": {
            "name": "keyword.operator.ailang",
            "match": "[=><!~?:&|+\\-*/%^]+"
        },
        "brackets": {
            "patterns": [
                {"name": "punctuation.definition.array.begin.ailang", "match": "\\["},
                {"name": "punctuation.definition.array.end.ailang", "match": "\\]"},
                {"name": "punctuation.definition.dictionary.begin.ailang", "match": "\\("},
                {"name": "punctuation.definition.dictionary.end.ailang", "match": "\\)"},
                {"name": "punctuation.definition.block.begin.ailang", "match": "\\\\.\\{"},
                {"name": "punctuation.definition.block.end.ailang", "match": "\\}"}
            ]
        },
        "constants": {
            "name": "constant.language.ailang",
            "match": "\\b(true|false|null|none|True|False|None)\\b"
        },
        "types": {
            "name": "support.type.ailang",
            "match": "\\b(int|float|str|bool|list|dict|tuple|Tensor|Model|Layer|Optimizer|Loss|Metric)\\b"
        },
        "layers": {
            "name": "support.type.layer.ailang",
            "match": "\\b(Dense|Conv1D|Conv2D|Conv3D|LSTM|GRU|SimpleRNN|TimeDistributed|Bidirectional|Embedding|Flatten|Reshape|Permute|RepeatVector|Lambda|Dropout|SpatialDropout1D|SpatialDropout2D|BatchNormalization|LayerNormalization|MaxPooling1D|MaxPooling2D|AveragePooling1D|AveragePooling2D|GlobalMaxPooling1D|GlobalMaxPooling2D|GlobalAveragePooling1D|GlobalAveragePooling2D)\\b"
        },
        "activations": {
            "name": "support.function.activation.ailang",
            "match": "\\b(relu|sigmoid|tanh|softmax|softplus|softsign|selu|elu|exponential|linear|leaky_relu|prelu|thresholded_relu|hard_sigmoid)\\b"
        },
        "optimizers": {
            "name": "support.type.optimizer.ailang",
            "match": "\\b(SGD|RMSprop|Adagrad|Adadelta|Adam|Adamax|Nadam|Ftrl)\\b"
        },
        "losses": {
            "name": "support.type.loss.ailang",
            "match": "\\b(MeanSquaredError|MeanAbsoluteError|MeanAbsolutePercentageError|MeanSquaredLogarithmicError|BinaryCrossentropy|CategoricalCrossentropy|SparseCategoricalCrossentropy|Hinge|SquaredHinge|CategoricalHinge|LogCosh|Huber|KLDivergence|Poisson|CosineSimilarity|BinaryFocalCrossentropy|Huber|LogCosh)\\b"
        }
    }
}
